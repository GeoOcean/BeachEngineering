{
  "name": "Conda_env",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },

  "postCreateCommand": "conda activate beach",

  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "python.defaultInterpreterPath": "/opt/conda/envs/beach/bin/python"
  },

  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter"
  ]
}
